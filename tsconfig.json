{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "esnext"],
    "noUnusedLocals": true,
    "allowJs": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "strict": true,
    "removeComments": true,
    "module": "esnext",
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
